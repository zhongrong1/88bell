page{height:100%;background:#F1F1F1;}
.command{width:100%;background:#D43C33;text-align:center;padding-bottom:15px;}
.saypass{width:80%;margin:0 auto; margin-top:30px; margin-bottom:20px; border-radius:30px;}
.sendtx{padding-top:10px;}
.sendtx image{width:80px;height:80px;border-radius:40px;border:2px solid #FFD7D5;}
.snick{color:#FFD7D5;margin-top:5px;font-size:19px;}
.password{color:#FBECB5;font-size:25px;margin-top:25px;}
.function{color:#fff;}
.func-item{margin-left:8px;margin-right:15px;}
.myrecord{width:100%;color:#898989;font-size:14px;}
.norecord{text-align:center;padding-top:50px;}
.allmoney{color:#FBECB5;margin-top:30px;margin-bottom:20px;}
.moneysize{ font-size:40px;font-weight:bold;}
.record-item{clear:both;margin-top:10px;padding:10px;overflow:hidden;border:1px solid #eee;border-radius:5px;background:#fff;}
.record-item .receiptorpic{width:55px;height:55px;border-radius:5px;}
.lt{float:left;}
.rt{float:right;}
.receiptor{margin-left:8px;}
.receiptor .receive-nick{color:#000;font-size:12px;}
.receiptor .receive-nick image{width:12px;height:12px;margin-top:-2px;padding-left:4px; vertical-align:middle;}
.receiptor .receive-pass{width:100px;height:32px;border:1px solid #ddd;padding:6px;box-sizing:border-box;border-radius:5px;margin-top:5px;background:#F8F8F8;}
.receive-info{text-align:right;padding-top:10px;}
.receive-info .receive-money{color:#000;font-size:15px;font-weight:bold;}
.receive-info .receive-time{padding-top:4px;font-size:12px;}
.share{line-height:normal; overflow:visible;}